<!-- Question display template -->
<!-- Child of index.hbs -->
<!-- Displays question after clicking question link on question-tile.hbs -->
<!-- Has "Add Your Answer" for a new answer form, but does not save properly -->
<!-- Adds new answer to list of answers for that question -->

<h4>"{{model.question}}" -{{model.author}}</h4>

{{update-question question=model update="update"}}

{{question-detail question=model}}

<h3>Answers:</h3>

{{answer-tile answers=model.answers}}

{{new-answer save="save" question=model}}

